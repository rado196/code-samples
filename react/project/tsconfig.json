{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "~assets/*": ["./assets/*"],
      "~constants/*": ["./constants/*"],
      "~components/*": ["./components/*"],
      "~hooks/*": ["./hooks/*"],
      "~layouts/*": ["./layouts/*"],
      "~screens/*": ["./screens/*"]
    }
  },
  "include": [
    "./global.d.ts",
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": ["node_modules", "src/sdk.ts"]
}
