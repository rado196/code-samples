{
  "extends": ["./.eslintrc"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "error",
    "semi": "error",
    "curly": "error",
    "no-debugger": "error",
    "no-constant-condition": "error"
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "no-unused-vars": "error"
      }
    },
    {
      "files": ["*.ts"],
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "error"
      }
    }
  ]
}
